<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/screen/window.xsd"
        caption="msg://tenlopEdit.caption"
        focusComponent="form"
        messagesPack="com.company.truonghoc.web.screens.tenlop">
    <data>
        <instance id="tenlopDc"
                  class="com.company.truonghoc.entity.Tenlop">
            <view extends="tenlop-view"/>
            <loader/>
        </instance>
        <collection id="donvisDc"
                    class="com.company.truonghoc.entity.Donvi"
                    view="donvi-view">
            <loader id="donvisDl">
                <query>
                    <![CDATA[select e from truonghoc_Donvi e]]>
                </query>
            </loader>
        </collection>
    </data>
    <dialogMode height="600"
                width="800"/>
    <layout expand="editActions" spacing="true">
        <form id="form" dataContainer="tenlopDc">
            <hbox width="100%" spacing="true">
                <lookupField id="donviFiled" dataContainer="tenlopDc" property="dovi" caption="Đơn vị"/>
                <textField id="tenlopField" dataContainer="tenlopDc" property="tenlop" caption="Tên lớp"/>
                <lookupField id="giaoviencnField" dataContainer="tenlopDc" property="giaoviencn" caption="Giáo viên chủ nhiệm"/>
            </hbox>
        </form>
        <hbox id="editActions" spacing="true">
            <button id="commitAndCloseBtn" action="windowCommitAndClose"/>
            <button id="closeBtn" action="windowClose"/>
        </hbox>
    </layout>
</window>
