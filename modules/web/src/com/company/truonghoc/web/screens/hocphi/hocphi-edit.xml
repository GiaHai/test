<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/screen/window.xsd"
        caption="mainMsg://hocphiEdit.caption"
        focusComponent="form"
        messagesPack="com.company.truonghoc.web.screens.hocphi">
    <data>
        <instance id="hocphiDc"
                  class="com.company.truonghoc.entity.Hocphi"
                  view="hocphi-view">
            <loader/>
        </instance>
        <collection id="hocsinhsDc"
                    class="com.company.truonghoc.entity.Hocsinh"
                    view="hocsinh-view">
            <loader id="hocsinhsDl">
                <query>
                    <![CDATA[select e from truonghoc_Hocsinh e]]>
                </query>
            </loader>
        </collection>
    </data>
    <dialogMode height="600"
                width="800"/>
    <layout expand="editActions" spacing="true">
        <vbox spacing="true">
            <grid id="form" spacing="true" width="100%">
                <columns>
                    <column flex="1"/>
                    <column flex="1"/>
                    <column flex="1"/>
                    <column flex="0.1"/>
                    <column flex="1"/>
                    <column flex="1"/>
                    <column flex="1"/>
                </columns>
                <rows>
<!--                    dòng 1-->
                    <row>
                        <form colspan="3" width="100%" childrenCaptionWidth="80px" dataContainer="hocphiDc">
                            <column>
                                <textField id="usertaoField"
                                           property="usertao_hocphi"
                                           width="100%"
                                           caption="mainMsg://nguoitaothu"/>
                            </column>
                        </form>
                        <form colspan="1" width="100%">
                            <column>
                                <label value=""/>
                            </column>
                        </form>
                        <form colspan="3" width="100%" childrenCaptionWidth="80px" dataContainer="hocphiDc">
                            <column>
                                <textField id="dovitao_hocphiField"
                                           property="dovitao_hocphi"
                                           width="100%"
                                           caption="mainMsg://donvitao"/>
                            </column>
                        </form>
                    </row>
<!--                    dòng 2-->
                    <row>
                        <form colspan="3" width="100%" childrenCaptionWidth="80px" dataContainer="hocphiDc">
                            <column>
                                <lookupField id="hovatenField"
                                             property="hovaten"
                                             width="100%"
                                             optionsContainer="hocsinhsDc"
                                             caption="mainMsg://hocphi.hovaten"/>
                            </column>
                        </form>
                        <form colspan="1" width="100%">
                            <column>
                                <label value=""/>
                            </column>
                        </form>
<!--                        <form colspan="3" width="100%" childrenCaptionWidth="80px" dataContainer="hocphiDc">-->
<!--                            <column>-->
<!--                                <textField id="namsinhField"-->
<!--                                           property="namsinh"-->
<!--                                           width="100%"-->
<!--                                           caption="mainMsg://hocphi.namsinh"/>-->
<!--                            </column>-->
<!--                        </form>-->
                    </row>
<!--                    dòng 3-->
                    <row>
                        <form colspan="7" width="100%" childrenCaptionWidth="80px" dataContainer="hocphiDc">
                            <column>
                                <textArea id="ghichuField"
                                          property="ghichu"
                                          width="100%"
                                          caption="mainMsg://hocphi.ghichu"/>
                            </column>
                        </form>
                    </row>
<!--                    dòng 4-->
                    <row>
                        <form colspan="3" width="100%" childrenCaptionWidth="80px" dataContainer="hocphiDc">
                            <column>
                                <textField id="sotientamtinhField"
                                           property="sotientamtinh"
                                           width="100%"
                                           caption="mainMsg://hocphi.sotientamtinh"/>
                            </column>
                        </form>
                        <form colspan="1" width="100%">
                            <column>
                                <label value=""/>
                            </column>
                        </form>
                        <form colspan="3" width="100%" childrenCaptionWidth="80px" dataContainer="hocphiDc">
                            <column>
                                <textField id="sotienthutheohdField"
                                           property="sotienthutheohd"
                                           width="100%"
                                           caption="mainMsg://hocphi.sotienthutheohd"/>
                            </column>
                        </form>
                    </row>
<!--                    dòng 5-->
                    <row>
                        <form colspan="3" width="100%" childrenCaptionWidth="80px" dataContainer="hocphiDc">
                            <column>
                                <dateField id="ngaydongField"
                                           property="ngaydong"
                                           width="100%"
                                           caption="mainMsg://hocphi.ngaydong"/>
                            </column>
                        </form>
                        <form colspan="1" width="100%">
                            <column>
                                <label value=""/>
                            </column>
                        </form>
                        <form colspan="3" width="100%" childrenCaptionWidth="80px" dataContainer="hocphiDc">
                            <column>
                                <dateField id="handongField"
                                           property="handong"
                                           width="100%"
                                           caption="Hạn đóng"/>
                                <lookupField id="hinhthucthanhtoanField"
                                             property="hinhthucthanhtoan"
                                             width="100%"
                                             caption="mainMsg://hocphi.hinhthucthanhtoan"
                                             nullName="Hình thức thanh toán"/>
                                <textField id="tinhtrangthanhtoanFiedl"
                                           property="tinhtrangthanhtoan"
                                />
                            </column>
                        </form>
                    </row>
                </rows>
            </grid>
        </vbox>
        <hbox id="editActions" spacing="true">
            <button id="commitAndCloseBtn" action="windowCommitAndClose"/>
            <button id="closeBtn" action="windowClose"/>
        </hbox>
    </layout>
</window>
