<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/screen/window.xsd"
        caption="mainMsg://lophocEdit.caption"
        focusComponent="form"
        messagesPack="com.company.truonghoc.web.screens.lophoc">
    <data>
        <instance id="lophocDc"
                  class="com.company.truonghoc.entity.Lophoc">
            <view extends="lophoc-view"/>
            <loader/>
            <collection id="dshocsinhDc" property="dshocsinh"/>
        </instance>
        <collection id="tenlopsDc"
                    class="com.company.truonghoc.entity.Tenlop">
            <view extends="tenlop-view"/>
            <loader id="tenlopsDl">
                <query>
                    <![CDATA[select e from truonghoc_Tenlop e]]>
                </query>
            </loader>
        </collection>
        <collection id="hocsinhsDc"
                    class="com.company.truonghoc.entity.Hocsinh"
                    view="hocsinh-view">
            <loader id="hocsinhsDl">
                <query>
                    <![CDATA[select e from truonghoc_Hocsinh e]]>
                </query>
            </loader>
        </collection>
        <collection id="donvisDc"
                    class="com.company.truonghoc.entity.Donvi"
                    view="donvi-view">
            <loader id="donvisDl">
                <query>
                    <![CDATA[select e from truonghoc_Donvi e]]>
                </query>
            </loader>
        </collection>

        <collection id="giaoviensDc"
                    class="com.company.truonghoc.entity.Giaovien"
                    view="giaovien-view">
            <loader id="giaoviensDl">
                <query>
                    <![CDATA[select e from truonghoc_Giaovien e]]>
                </query>
            </loader>
        </collection>
    </data>
    <dialogMode height="600"
                width="800"/>
    <layout expand="editActions" spacing="true" stylename="css-layout-lophocedit">
        <vbox spacing="true" stylename="css-vbox">
            <grid id="form" spacing="true" width="100%">
            <columns>
                <column flex="1"/>
                <column flex="1"/>
                <column flex="1"/>
                <column flex="0.1"/>
                <column flex="1"/>
                <column flex="1"/>
                <column flex="0.1"/>
                <column flex="1"/>
                <column flex="1"/>
                <column flex="1"/>
                <column flex="1"/>
                <column flex="1"/>
            </columns>
                <rows >
                    <row>
                        <form colspan="3" width="100%" childrenCaptionWidth="80px">
                            <column>
                                <lookupField id="donviFiled"
                                             nullName="--Tất cả đơn vị--"
                                             width="100%"
                                             caption="Đơn vị"/>
                            </column>
                        </form>
                        <form colspan="1" width="100%">
                            <column>
                                <label value=""/>
                            </column>
                        </form>
                        <form colspan="1" width="100%">
                            <column>
                                <button id="timkiemBtn"
                                        width="100%"
                                        caption="Tìm kiếm Lớp học" align="BOTTOM_CENTER"/>
                            </column>
                        </form>
                        <form colspan="1" width="100%">
                            <column>
                                <label value=""/>
                            </column>
                        </form>
                        <form colspan="3" width="100%" childrenCaptionWidth="80px">
                            <column>
                                <textField id="DvField"
                                           property="donvi"
                                           dataContainer="lophocDc"
                                           width="100%"
                                           caption="Đơn vị"/>
                            </column>
                        </form>
                        <form colspan="3" width="100%" childrenCaptionWidth="80px">
                            <column>
                                <textField id="giaovien"
                                           property="giaoviencn"
                                           width="100%"
                                           caption="mainMsg://lophoc.giaoviencn"
                                           dataContainer="lophocDc"/>
                            </column>
                        </form>
                    </row>

                    <row>
                        <form colspan="3" width="100%" childrenCaptionWidth="80px">
                            <column>
                                <lookupField id="giaovienField"
                                             optionsContainer="giaoviensDc"
                                             captionProperty="tengiaovien"
                                             nullName="---Tất cả giáo viên---"
                                             width="100%"
                                             caption="mainMsg://lophoc.giaoviencn"/>
                            </column>
                        </form>
                        <form colspan="1" width="100%">
                            <column>
                                <label value=""/>
                            </column>
                        </form>
                        <form colspan="1" width="100%">
                            <column>
                                <button id="xoaBtn"
                                        caption="Xóa" width="100%" />
                            </column>
                        </form>
                        <form colspan="1" width="100%">
                            <column>
                                <label value=""/>
                            </column>
                        </form>
                        <form colspan="6" width="100%" childrenCaptionWidth="80px">
                            <column>
                                <textField id="tenlopField"
                                           property="tenlop"
                                           dataContainer="lophocDc"
                                           width="100%"
                                           caption="mainMsg://lophoc.tenlop"/>
                            </column>
                        </form>
                    </row>
                </rows>
            </grid>
        </vbox>

        <groupBox id="dshocsinhBox" caption="mainMsg://hocsinhBrowse.caption">
            <table id="dshocsinhTable" dataContainer="dshocsinhDc" width="100%" height="200px">
                <actions>
                    <action id="create" type="create"/>
                    <action id="edit" type="edit"/>
                    <action id="remove" type="remove"/>
                </actions>
                <columns>
                    <column id="stt" generator="stt" caption="STT"/>
                    <column id="tenhocsinh"
                            caption="mainMsg://hocsinh.tenhocsinh"/>
                    <column id="ngaysinhhocsinh"
                            caption="mainMsg://hocsinh.ngaysinhhocsinh"/>
                    <column id="gioitinhhocsinh"
                            caption="mainMsg://hocsinh.gioitinhhocsinh"/>
                    <column id="quequanhocsinh"
                            caption="mainMsg://hocsinh.quequanhocsinh"/>
                    <column id="ghichu"
                            caption="mainMsg://hocsinh.ghichu"/>
                </columns>
                <buttonsPanel>
                    <button action="dshocsinhTable.create"/>
                    <button action="dshocsinhTable.edit"/>
                    <button action="dshocsinhTable.remove"/>
                </buttonsPanel>
            </table>
        </groupBox>
        <hbox id="editActions" spacing="true">
            <button id="commitAndCloseBtn" action="windowCommitAndClose"/>
            <button id="closeBtn" action="windowClose"/>
        </hbox>
    </layout>
</window>
