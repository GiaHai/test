<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/screen/window.xsd"
        caption="mainMsg://chamconggvEdit.caption"
        focusComponent="form"
        messagesPack="com.company.truonghoc.web.screens.chamconggv">
    <data>
        <instance id="chamconggvDc"
                  class="com.company.truonghoc.entity.Chamconggv">
            <view extends="chamconggv-view"/>
            <loader/>
        </instance>
        <collection id="giaoviensDc"
                    class="com.company.truonghoc.entity.Giaovien"
                    view="giaovien-view">
            <loader id="giaoviensDl">
                <query>
                    <![CDATA[select e from truonghoc_Giaovien e]]>
                </query>
            </loader>
        </collection>
        <collection id="donvisDc"
                    class="com.company.truonghoc.entity.Donvi"
                    view="donvi-view">
            <loader id="donvisDl">
                <query>
                    <![CDATA[select e from truonghoc_Donvi e]]>
                </query>
            </loader>
        </collection>
    </data>
    <dialogMode height="600"
                width="800"/>
    <layout expand="editActions" spacing="true">
        <vbox spacing="true">
            <grid id="form" spacing="true" width="80%">
                <columns>
                    <column flex="1"/>
                    <column flex="1"/>
                    <column flex="1"/>
                    <column flex="0.1"/>
                    <column flex="1"/>
                    <column flex="1"/>
                    <column flex="1"/>
                </columns>
                <rows>
                    <!--                    dòng 1-->
                    <row>
                        <form colspan="3" width="100%" childrenCaptionWidth="80px" dataContainer="chamconggvDc">
                            <column>
                                <lookupField id="hotenGvField"
                                             property="hotengv"
                                             width="100%"
                                             caption="mainMsg://chamcong.hovaten"
                                             required="true"
                                             requiredMessage="mainMsg://giaovien.requiredMessage"
                                             nullName="--Lọc tất cả---"/>
                            </column>
                        </form>
                        <form colspan="1" width="100%">
                            <column>
                                <label value=""/>
                            </column>
                        </form>
                        <form colspan="3" width="100%" childrenCaptionWidth="80px" dataContainer="chamconggvDc">
                            <column>
                                <lookupField id="donvigvField"
                                             width="100%"
                                             caption="mainMsg://chamcong.donvi"
                                             nullName="--Lọc tất cả---"
                                             requiredMessage="mainMsg://donvi.requiredMessage"
                                             property="donvigv"/>
                            </column>
                        </form>
                    </row>
                    <!--                    dòng 2-->
                    <row>
                        <form colspan="2" width="100%" childrenCaptionWidth="80px" dataContainer="chamconggvDc">
                            <column>
                                <dateField id="ngaylamField"
                                           width="100%"
                                           caption="mainMsg://chamcong.ngaylam"
                                           property="ngaylam"/>
                            </column>
                        </form>
                        <form colspan="1" width="100%">
                            <column>
                                <label value=""/>
                            </column>
                        </form>
                        <form colspan="2" width="100%" childrenCaptionWidth="80px" dataContainer="chamconggvDc">
                            <column>
                                <lookupField id="buoilamField"
                                             width="100%"
                                             caption="mainMsg://chamcong.buoilam"
                                             nullName="--Lọc tất cả---"
                                             property="buoilam"/>
                            </column>
                        </form>
                        <form colspan="2" width="100%" childrenCaptionWidth="80px" dataContainer="chamconggvDc">
                            <column>
                                <lookupField id="tienbuoiField"
                                             width="100%"
                                             caption="mainMsg://chamcong.buoilam"
                                             nullName="---Số tiền theo ca---"
                                             property="tienBuoi"/>
                            </column>
                        </form>
                    </row>
                </rows>
            </grid>
        </vbox>
        <hbox id="editActions" spacing="true">
            <button id="commitAndCloseBtn" action="windowCommitAndClose"/>
            <button id="closeBtn" action="windowClose"/>
        </hbox>
    </layout>
</window>
