<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/screen/window.xsd"
        xmlns:c="http://schemas.haulmont.com/cuba/screen/jpql_condition.xsd"
        caption="mainMsg://hocphiBrowse.caption"
        focusComponent="hocphisTable"
        messagesPack="com.company.truonghoc.web.screens.hocphi">
    <data readOnly="true">
        <collection id="hocphisDc"
                    class="com.company.truonghoc.entity.Hocphi"
                    view="hocphi-view">
            <loader id="hocphisDl">
                <query>
                    <![CDATA[select e from truonghoc_Hocphi e]]>
                </query>
            </loader>
        </collection>
        <collection id="donvisDc"
                    class="com.company.truonghoc.entity.Donvi"
                    view="donvi-view">
            <loader id="donvisDl">
                <query>
                    <![CDATA[select e from truonghoc_Donvi e]]>
                </query>
            </loader>
        </collection>
    </data>
    <facets>
        <dataLoadCoordinator auto="true">
        </dataLoadCoordinator>
    </facets>
    <layout expand="hocphisTable"
            stylename="css-brower-hocphi"
            spacing="true">
        <groupBox caption="Tìm kiếm"
                  collapsable="true"
                  collapsed="false"
                  stylename="css-hbox-search"
                  spacing="true"
                  width="100%">
            <hbox spacing="true" width="100%">
                <vbox spacing="true">
                    <lookupField id="dovitao_hocphiField"
                                 caption="Đơn vị"
                                 width="100%"
                                 nullName="Lọc tất cả"/>
                    <textField id="giaovienField"
                               width="100%"
                               inputPrompt="Họ và tên giáo viên"
                               caption="Giáo viên"/>
                </vbox>
                <vbox spacing="true">
                    <textField id="hovstenField"
                               caption="Họ và tên"
                               width="100%"
                               inputPrompt="Họ và tên học sinh"/>
                    <lookupField id="trangthaiField"
                                 width="100%"
                                 caption="Trạng thái"
                                 nullName="Lọc tất cả"/>
                </vbox>
                <vbox spacing="true">
                    <dateField id="tungayField"
                               datatype="date"
                               resolution="DAY"
                               width="100%"
                               caption="mainMsg://tungay"/>
                    <dateField id="denngayField"
                               datatype="date"
                               resolution="DAY"
                               width="100%"
                               caption="mainMsg://denngay"/>
                </vbox>
                <vbox align="BOTTOM_CENTER" spacing="true" width="30%">
                    <button id="timkiemBtn"
                            invoke="timkiemExcute"
                            stylename="Btntimkiem"
                            caption="Tìm kiếm" align="TOP_CENTER"/>
                    <button id="clearBtn"
                            caption="Clear"
                            css="margin-top: 22%;display: grid;"/>
                </vbox>
            </hbox>
        </groupBox>
        <groupTable id="hocphisTable"
                    width="100%"
                    dataContainer="hocphisDc">
            <actions>
                <action id="create" type="create"/>
                <action id="edit" type="edit"/>
                <action id="remove" type="remove"/>
            </actions>
            <columns>
                <column id="stt"
                        generator="stt"
                        caption="STT"/>
                <column id="usertao_hocphi"
                        caption="mainMsg://nguoitaothu"/>
                <column id="dovitao_hocphi"
                        caption="mainMsg://donvitao"/>
                <column id="hovaten"
                        caption="mainMsg://hocphi.hovaten"/>
<!--                <column id="namsinh"-->
<!--                        caption="mainMsg://hocphi.namsinh"/>-->
                <column id="ghichu"
                        caption="mainMsg://hocphi.ghichu"/>
                <column id="sotientamtinh"
                        caption="mainMsg://hocphi.sotientamtinh"/>
                <column id="sotienthutheohd"
                        caption="mainMsg://hocphi.sotienthutheohd"/>
                <column id="ngaydong"
                        caption="mainMsg://hocphi.ngaydong"/>
                <column id="handong"
                        caption="Hạn đóng"/>
                <column id="hinhthucthanhtoan"
                        caption="mainMsg://hocphi.hinhthucthanhtoan"/>
                <column id="checkhandong"
                        generator="checkhandong"
                        caption="Trạng thái"/>
            </columns>
            <rowsCount/>
            <buttonsPanel id="buttonsPanel"
                          alwaysVisible="true">
<!--                <button id="createBtn" action="hocphisTable.create"/>-->
                <button id="createBtn" action="hocphisTable.create"/>
                <button id="editBtn" action="hocphisTable.edit"/>
                <button id="removeBtn" action="hocphisTable.remove"/>
            </buttonsPanel>
        </groupTable>
        <hbox id="lookupActions" spacing="true" visible="false">
            <button action="lookupSelectAction"/>
            <button action="lookupCancelAction"/>
        </hbox>
    </layout>
</window>
