<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/screen/window.xsd"
        caption="msg://diemdanhEdit.caption"
        focusComponent="form"
        messagesPack="com.company.truonghoc.web.screens.diemdanh">
    <data>
        <instance id="diemdanhDc"
                  class="com.company.truonghoc.entity.Diemdanh">
            <view extends="diemdanh-view"/>
            <loader/>
        </instance>
    </data>
    <layout expand="editActions" spacing="true">
        <vbox spacing="true">
            <grid id="form" spacing="true" width="100%">
                <columns>
                    <column flex="1"/>
                    <column flex="1"/>
                    <column flex="1"/>

                    <column flex="1"/>
                    <column flex="1"/>
                    <column flex="1"/>
                </columns>
                <rows>
                    <!--                    dòng 1-->
                    <row>
                        <form colspan="3" width="100%" childrenCaptionWidth="180px" dataContainer="diemdanhDc">
                            <column>
                                <lookupField id="donviField"
                                             property="donvidd"
                                             width="100%"
                                             nullName="--Lọc tất cả---"
                                             required="true"
                                             requiredMessage="mainMsg://donvi.requiredMessage"
                                             caption="Đơn vị"/>
                            </column>
                        </form>

                        <form colspan="3" width="100%" childrenCaptionWidth="80px" dataContainer="diemdanhDc">
                            <column>
                                <lookupField id="nguoitaoField"
                                             property="giaoviendd"
                                             width="100%"
                                             nullName="--Lọc tất cả---"
                                             requiredMessage="mainMsg://giaovien.requiredMessage"
                                             required="true"
                                             caption="Giáo viên"/>
                            </column>
                        </form>
                    </row>
                    <!--                    dòng 2-->
                    <row>
                        <form colspan="6" width="100%" childrenCaptionWidth="180px" dataContainer="diemdanhDc">
                            <column>
                                <lookupField id="lopField"
                                             property="lopdd"
                                             width="100%"
                                             nullName="--Lọc tất cả---"
                                             required="true"
                                             requiredMessage="mainMsg://tenlop.requiredMessage"
                                             caption="Lớp chủ nhiệm"/>
                            </column>
                        </form>
                    </row>
                    <!--                    dòng 3 -->
                    <row>
                        <form colspan="2" width="100%" childrenCaptionWidth="180px" dataContainer="diemdanhDc">
                            <column>
                                <lookupField id="hocsinhField" width="100%"
                                             property="hotenhs" caption="Danh sách học sinh nghỉ"
                                             required="true"
                                             nullName="---Danh sách học sinh---"/>
                            </column>
                        </form>
                        <form colspan="2" width="100%" childrenCaptionWidth="80px" dataContainer="diemdanhDc">
                            <column>
                                <dateField id="ngaynghiField"
                                           property="ngaynghi"
                                           width="100%"
                                           caption="mainMsg://diemdanh.ngaynghi"/>
                            </column>
                        </form>
                        <form colspan="2" width="100%" childrenCaptionWidth="100px" dataContainer="diemdanhDc">
                            <column>
                                <dateField id="ngayHocbuField"
                                           property="ngayHocbu"
                                           width="100%"
                                           caption="mainMsg://diemdanh.ngayhocbu"/>
                            </column>
                        </form>
                    </row>
                </rows>
            </grid>
        </vbox>

        <hbox id="editActions" spacing="true">
            <button id="commitAndCloseBtn" action="windowCommitAndClose"/>
            <button id="closeBtn" action="windowClose"/>
        </hbox>
    </layout>
</window>
