<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/screen/window.xsd"
        caption="msg://diemdanhEdit.caption"
        focusComponent="form"
        messagesPack="com.company.truonghoc.web.screens.diemdanh">
    <data>
        <instance id="diemdanhDc"
                  class="com.company.truonghoc.entity.Diemdanh">
            <view extends="diemdanh-view"/>
            <loader/>
        </instance>
        <collection id="giaoviensDc"
                    class="com.company.truonghoc.entity.Giaovien"
                    view="giaovien-view">
            <loader id="giaoviensDl">
                <query>
                    <![CDATA[select e from truonghoc_Giaovien e]]>
                </query>
            </loader>
        </collection>

        <collection id="hocsinhsDc"
                    class="com.company.truonghoc.entity.Hocsinh"
                    view="hocsinh-view">
            <loader id="hocsinhsDl">
                <query>
                    <![CDATA[select e from truonghoc_Hocsinh e]]>
                </query>
            </loader>
        </collection>
    </data>
    <layout expand="editActions" spacing="true">
        <form id="form" dataContainer="diemdanhDc">
            <column width="350px">
                <textField id="nguoitaoField" property="nguoitaodd"
                           caption="Giáo viên"/>
                <textField id="donviField" property="donvidd"
                           caption="Đơn vị"/>
                <tokenList id="tokenListField" simple="true" property="hotenhs" caption="Danh sách học sinh nghỉ">
                    <lookup multiselect="true" optionsContainer="hocsinhsDc" captionProperty="tenhocsinh"/>
                    <addButton caption="Thêm" />
                </tokenList>
                <dateField id="ngaynghiField"
                           property="ngaynghi"
                           caption="mainMsg://diemdanh.ngaynghi"/>
            </column>
        </form>
        <hbox id="editActions" spacing="true">
            <button id="commitAndCloseBtn" action="windowCommitAndClose"/>
            <button id="closeBtn" action="windowClose"/>
        </hbox>
    </layout>
</window>
