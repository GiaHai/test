<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/screen/window.xsd"
        caption="msg://diemdanhEdit.caption"
        focusComponent="form"
        messagesPack="com.company.truonghoc.web.screens.diemdanh">
    <data>
        <instance id="diemdanhDc"
                  class="com.company.truonghoc.entity.Diemdanh">
            <view extends="diemdanh-view"/>
            <loader/>
        </instance>
        <collection id="giaoviensDc"
                    class="com.company.truonghoc.entity.Giaovien"
                    view="giaovien-view">
            <loader id="giaoviensDl">
                <query>
                    <![CDATA[select e from truonghoc_Giaovien e]]>
                </query>
            </loader>
        </collection>

        <collection id="hocsinhsDc"
                    class="com.company.truonghoc.entity.Hocsinh"
                    view="hocsinh-view">
            <loader id="hocsinhsDl">
                <query>
                    <![CDATA[select e from truonghoc_Hocsinh e]]>
                </query>
            </loader>
        </collection>

        <collection id="lophocsDc"
                    class="com.company.truonghoc.entity.Lophoc">
            <view extends="lophoc-view"/>
            <loader id="lophocsDl">
                <query>
                    <![CDATA[select e from truonghoc_Lophoc e]]>
                </query>
            </loader>
        </collection>
    </data>
    <layout expand="editActions" spacing="true">
        <vbox spacing="true">
            <grid id="form" spacing="true" width="80%">
                <columns>
                    <column flex="1"/>
                    <column flex="1"/>
                    <column flex="1"/>
                    <column flex="0.1"/>
                    <column flex="1"/>
                    <column flex="1"/>
                    <column flex="1"/>
                </columns>
                <rows>
                    <!--                    dòng 1-->
                    <row>
                        <form colspan="3" width="100%" childrenCaptionWidth="180px" dataContainer="diemdanhDc">
                            <column>
                                <lookupField id="donviField"
                                             property="donvidd"
                                             width="100%"
                                             nullName="--Lọc tất cả---"
                                             caption="Đơn vị"/>
                            </column>
                        </form>
                        <form colspan="1" width="100%">
                            <column>
                                <label value=""/>
                            </column>
                        </form>
                        <form colspan="3" width="100%" childrenCaptionWidth="80px" dataContainer="diemdanhDc">
                            <column>
                                <lookupField id="nguoitaoField"
                                             property="nguoitaodd"
                                             width="100%"
                                             nullName="--Lọc tất cả---"
                                             caption="Giáo viên"/>
                            </column>
                        </form>
                    </row>
                    <!--                    dòng 2-->
                    <row>
                        <form colspan="7" width="100%" childrenCaptionWidth="180px" dataContainer="diemdanhDc">
                            <column>
                                <lookupField id="lopField"
                                             property="lopdd"
                                             width="100%"
                                             nullName="--Lọc tất cả---"
                                             caption="Lớp chủ nhiệm"/>
                            </column>
                        </form>
                    </row>
                    <!--                    dòng 3 -->
                    <row>
                        <form colspan="3" width="100%" childrenCaptionWidth="180px" dataContainer="diemdanhDc">
                            <column>
                                <lookupField id="hocsinhField" width="100%"
                                             property="hotenhs" caption="Danh sách học sinh nghỉ"
                                             nullName="---Danh sách học sinh---"/>
                            </column>
                        </form>
                        <form colspan="1" width="100%">
                            <column>
                                <label value=""/>
                            </column>
                        </form>
                        <form colspan="3" width="100%" childrenCaptionWidth="80px" dataContainer="diemdanhDc">
                            <column>
                                <dateField id="ngaynghiField"
                                           property="ngaynghi"
                                           width="100%"
                                           caption="mainMsg://diemdanh.ngaynghi"/>
                            </column>
                        </form>
                    </row>
                </rows>
            </grid>
        </vbox>

        <hbox id="editActions" spacing="true">
            <button id="commitAndCloseBtn" action="windowCommitAndClose"/>
            <button id="closeBtn" action="windowClose"/>
        </hbox>
    </layout>
</window>
