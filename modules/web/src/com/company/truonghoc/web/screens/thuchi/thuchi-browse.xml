<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/screen/window.xsd"
        xmlns:c="http://schemas.haulmont.com/cuba/screen/jpql_condition.xsd"
        caption="msg://thuchiBrowse.caption"
        focusComponent="thuchisTable"
        messagesPack="com.company.truonghoc.web.screens.thuchi">
    <data readOnly="true">
        <collection id="thuchisDc"
                    class="com.company.truonghoc.entity.Thuchi"
                    view="thuchi-view">
            <loader id="thuchisDl">
                <query>
                    <![CDATA[select e from truonghoc_Thuchi e]]>
                </query>
            </loader>
        </collection>
        <collection id="donvisDc"
                    class="com.company.truonghoc.entity.Donvi"
                    view="donvi-view">
            <loader id="donvisDl">
                <query>
                    <![CDATA[select e from truonghoc_Donvi e]]>
                </query>
            </loader>
        </collection>
    </data>
    <facets>
        <dataLoadCoordinator auto="true">
        </dataLoadCoordinator>
    </facets>
    <layout expand="thuchisTable"
            spacing="true"
            stylename="css-layout-thuchi">
        <groupBox caption="Tìm kiếm"
                  collapsable="true"
                  collapsed="false"
                  stylename="css-hbox-search"
                  spacing="true"
                  width="100%">
            <hbox spacing="true" width="100%">
                <vbox spacing="true">
                    <lookupField id="donvitao_thuchiField"
                                 caption="Đơn vị"
                                 width="100%"
                                 nullName="---Lọc tất cả---"/>
                    <lookupField id="nguoichiField"
                               caption="Người thanh toán"
                               width="100%"
                               nullName="---Lọc tất cả---"/>
                </vbox>
                <vbox spacing="true">
                    <textField id="khoanchiField"
                               caption="Khoản chi"
                               width="100%"
                               inputPrompt="Tên khoản chi"/>
                    <lookupField id="trangthaiField"
                                 caption="Trạng thái"
                                 width="100%"
                                 nullName="---Lọc tất cả---"/>
                </vbox>
                <vbox spacing="true">
                    <dateField id="tungayField"
                               datatype="date"
                               resolution="DAY"
                               width="100%"
                               caption="mainMsg://tungay"
                               stylename="nhap"/>
                    <dateField id="denngayField"
                               datatype="date"
                               resolution="DAY"
                               width="100%"
                               caption="mainMsg://denngay"
                               stylename="nhap"/>
                </vbox>
                <vbox align="BOTTOM_CENTER" spacing="true" width="30%">
                    <button id="timkiemBtn"
                            invoke="timkiemExcute"
                            stylename="Btntimkiem"
                            caption="Tìm kiếm" align="TOP_CENTER"/>
                    <button id="clearBtn"
                            caption="Clear"
                            css="margin-top: 22%;display: grid;"/>
                </vbox>
            </hbox>
        </groupBox>
        <groupTable id="thuchisTable"
                    width="100%"
                    dataContainer="thuchisDc"
                    aggregatable="true">
            <actions>
                <action id="create" type="create"/>
                <action id="edit" type="edit"/>
                <action id="remove" type="remove"/>
            </actions>
            <columns>
                <column id="stt"
                        generator="stt"
                        caption="msg://Thuchi.stt"/>
                <column id="donvitao_thuchi"
                        caption="mainMsg://donvitao"/>
                <column id="ngaychi"
                        caption="Ngày chi"/>
                <column id="khoanchi"
                        caption="msg://Thuchi.khoanchi"/>
                <column id="soluong"
                        caption="msg://Thuchi.soluong"/>
                <column id="thanhtien"
                        caption="msg://Thuchi.thanhtien">
                    <aggregation type="SUM"/>
                </column>
                <column id="ghichu"
                        caption="msg://Thuchi.ghichu"/>
                <column id="checkhandong"
                        generator="checkhanchi"
                        caption="Trạng thái"/>
            </columns>
            <rowsCount/>
            <buttonsPanel id="buttonsPanel"
                          alwaysVisible="true">
                <button id="createBtn" action="thuchisTable.create"/>
                <button id="editBtn" action="thuchisTable.edit"/>
                <button id="removeBtn" action="thuchisTable.remove"/>
            </buttonsPanel>
        </groupTable>
        <hbox id="lookupActions" spacing="true" visible="false">
            <button action="lookupSelectAction"/>
            <button action="lookupCancelAction"/>
        </hbox>
    </layout>
</window>
