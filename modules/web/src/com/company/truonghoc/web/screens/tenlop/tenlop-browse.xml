<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/screen/window.xsd"
        xmlns:c="http://schemas.haulmont.com/cuba/screen/jpql_condition.xsd"
        caption="msg://tenlopBrowse.caption"
        focusComponent="tenlopsTable"
        messagesPack="com.company.truonghoc.web.screens.tenlop">
    <data readOnly="true">
        <collection id="tenlopsDc"
                    class="com.company.truonghoc.entity.Lophoc.Tenlop">
            <view extends="tenlop-view"/>
            <loader id="tenlopsDl">
                <query>
                    <![CDATA[select e from truonghoc_Tenlop e]]>
                </query>
            </loader>
        </collection>
    </data>
    <dialogMode height="600"
                width="800"/>
    <layout expand="tenlopsTable"
            spacing="true">
        <filter id="filter"
                applyTo="tenlopsTable"
                dataLoader="tenlopsDl">
            <properties include=".*"/>
        </filter>
        <groupTable id="tenlopsTable"
                    width="100%"
                    dataContainer="tenlopsDc">
            <actions>
                <action id="create" type="create"/>
                <action id="edit" type="edit"/>
                <action id="remove" type="remove"/>
            </actions>
            <columns>
                <column id="dovi"/>
                <column id="tenlop"/>
                <column id="giaoviencn"/>
            </columns>
            <rowsCount/>
            <buttonsPanel id="buttonsPanel"
                          alwaysVisible="true">
                <button id="createBtn" action="tenlopsTable.create"/>
                <button id="editBtn" action="tenlopsTable.edit"/>
                <button id="removeBtn" action="tenlopsTable.remove"/>
            </buttonsPanel>
        </groupTable>
        <hbox id="lookupActions" spacing="true" visible="false">
            <button action="lookupSelectAction"/>
            <button action="lookupCancelAction"/>
        </hbox>
    </layout>
</window>
